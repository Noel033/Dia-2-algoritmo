cursos = [
    {"codigo": "ALG101", "nombre": "Algoritmo y Estructura de Datos II", "hora_inicio": "15:30"},
    {"codigo": "FIS202", "nombre": "Física II", "hora_inicio": "17:00"},
    {"codigo": "EST305", "nombre": "Estadística y Probabilidades II", "hora_inicio": "09:30"},
    {"codigo": "MICRO110", "nombre": "Microeconomia", "hora_inicio": "10:15"},
    {"codigo": "TECN50", "nombre": "Tecnología de Información II", "hora_inicio": "08:45"}
]
def merge_sort(lista):
    if len(lista) <= 1:
        return lista
        
    mid = len(lista) // 2
    izquierda = merge_sort(lista[:mid])     
    derecha = merge_sort(lista[mid:])       
    return merge(izquierda, derecha)
def merge(izq, der):
    resultado = []  
    i, j = 0, 0    
    while i < len(izq) and j < len(der):
        if izq[i]["hora_inicio"] <= der[j]["hora_inicio"]:
            resultado.append(izq[i])  
            i += 1                    
        else:
            resultado.append(der[j])  
            j += 1     
    resultado.extend(izq[i:])
    resultado.extend(der[j:])
    return resultado
def buscar_por_hora(lista, hora):
    # para cada curso en la lista, si la hora es igual a la buscada lo guarda
    encontrados = [curso for curso in lista if curso["hora_inicio"] == hora]
    return encontrados

print("\nCursos originales:")
for c in cursos:         
    print(c)

cursos_ordenados = merge_sort(cursos)
print("\nCursos ordenados por hora:")
for c in cursos_ordenados:  
    print(c)


hora_usuario = input("\nIngrese una hora (HH:MM) para buscar: ")
resultado = buscar_por_hora(cursos_ordenados, hora_usuario)
if resultado:                   
    print("\nCursos encontrados:")
    for c in resultado:           
        print({
            "CODIGO": c["codigo"].upper(),
            "NOMBRE": c["nombre"].upper(),
            "HORA_INICIO": c["hora_inicio"].upper()
        })
else:                            
    print("No se encontró ningún curso a esa hora.")
    
    
def agregar_curso(lista):
    codigo = input("Ingrese el código del curso: ")
    nombre = input("Ingrese el nombre del curso: ")
    hora = input("Ingrese la hora de inicio (HH:MM): ")
    nuevo = {
        "codigo": codigo,
        "nombre": nombre,
        "hora_inicio": hora
    }
    lista.append(nuevo)   
    print("\nCurso agregado con éxito.\n")
    cursos_ordenados = merge_sort(lista) 
    print("Cursos después de agregar:")
    for c in cursos_ordenados:
        print({
            "CODIGO": c["codigo"].upper(),
            "NOMBRE": c["nombre"].upper(),
            "HORA_INICIO": c["hora_inicio"].upper()
        })
agregar_curso(cursos)
 
